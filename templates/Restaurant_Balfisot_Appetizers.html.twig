{% extends "Restaurant_Balfisot_Appetizers_Base.html.twig" %}

{% block body %}

    <nav class="navbar navbar-expand-lg body-tertiary position-relative">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light list-unstyled position-relative nLink1" href="{{ path("Categories") }}">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light list-unstyled position-relative nLink2 " href="{{ path("Register") }}">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light list-unstyled position-relative nLink3" href="{{ path("Profile") }}">Profile</a>
                    </li>
                    <a href= "{{ path('Home') }}"><img class= "nbLogo position-relative" src="/Pictures/Restaurant_Balfisot_Logo_(Picture_version).png"></a>
                    <li class="nav-item">
                        <a class="nav-link text-light list-unstyled position-relative nLink4" href="{{ path("Order") }}">Order</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-light list-unstyled position-relative nLink5" href="{{ path("Orders") }}">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-light list-unstyled position-relative nLink6" href="{{ path("Contact") }}">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light list-unstyled position-relative nLink7" href="{{ path("About Us") }}">About Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% for appetizer in appetizers  %}
{% set cardClass = cycle(['card9', 'card10', 'card11', 'card12', 'card13'], loop.index0) %}
<a class= "text-decoration-none text-dark" href="{{ path('Order') }}">
    <div class="card {{ cardClass }}">
        <div class="card-body">
             {% if appetizer.name == 'Lentil soup' %}
                  <img class= "picture1 position-relative"   src= "{{ asset('Pictures/Lentil_Soup.jpg') }}">
                  {% elseif appetizer.name == 'Beyran' %}
                  <img class= "picture2 position-relative"  src= "{{ asset('Pictures/Beyran.jpg') }}">
                  {% elseif appetizer.name == 'Water gourd' %}
                   <img class= "picture3 position-relative" src= " {{ asset('Pictures/Water_gourd.jpg') }}">
                    {% elseif appetizer.name == 'Yuvalama' %}
                   <img class= "picture4 position-relative" src= "{{ asset('Pictures/Yuvalama.jpg') }}">
                    {% elseif appetizer.name == 'Söğürme' %}
                   <img class= "picture5 position-relative" src= "{{ asset('Pictures/Söğürme.jpg') }}">
                    {% endif %}
         {% set textClass = cycle(['heading9', 'heading10', 'heading11', 'heading12', 'heading13'], loop.index0) %}
                            <h2 class="{{ textClass }} position-relative">{{ appetizer.name }}</h2>
            {% set descriptionClass = cycle(['text9', 'text10', 'text11', 'text12', 'text13'], loop.index0) %}
                        <p class= "{{ descriptionClass }} position-relative">{{ appetizer.description }}</p>
            {% set priceClass = cycle(['text14', 'text15', 'text16', 'text17', 'text18'], loop.index0) %}
            <p class= "{{ descriptionClass }} position-relative">{{ appetizer.price }}</p>
        </div>
    </div>
</a>
{% endfor %}

    <footer class= "footer position-relative">
        <p class= "text3 text-light position-relative">©</p>
        <p class= "text4 text-light position-relative">2023</p>
        <img class= "ftLogo position-relative" src="/Pictures/Restaurant_Balfisot_Logo_(Picture_version).png">
        <a href="https://www.facebook.com/"><img class= "fbLogo position-relative" src= "Pictures/FBLogo.png"></a>
        <a href="https://www.instagram.com/"><img class= "igLogo position-relative" src= "Pictures/IGLogo.png"></a>
        <a href= "https://twitter.com/home"><img class= "twLogo position-relative" src="Pictures/TWLogo.png"></a>
    </footer>

{% endblock %}


